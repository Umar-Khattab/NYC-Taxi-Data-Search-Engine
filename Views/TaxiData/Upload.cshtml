@model NycTaxiSearch.Models.ViewModels.UploadViewModel
@{
    ViewData["Title"] = "Upload CSV Data";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-cloud-upload-fill me-2"></i>Upload NYC Taxi Data
                </h3>
            </div>
            <div class="card-body p-4">
                @if (Model.IsSuccess)
                {
                    <div class="alert alert-success border-0 shadow-sm">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-check-circle-fill me-3" style="font-size: 2.5rem;"></i>
                            <div>
                                <h4 class="mb-1">Upload Successful!</h4>
                                <p class="mb-0">@Model.Message</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row text-center">
                            <div class="col-md-6 mb-2">
                                <h2 class="text-success mb-0">@Model.RecordsImported.ToString("N0")</h2>
                                <small class="text-muted">Records Imported</small>
                            </div>
                            <div class="col-md-6 mb-2">
                                <h2 class="text-primary mb-0"><i class="bi bi-database-check"></i></h2>
                                <small class="text-muted">Saved to Database</small>
                            </div>
                        </div>
                        <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Search" class="btn btn-success">
                                <i class="bi bi-search me-2"></i>Search Data Now
                            </a>
                            <a asp-action="Upload" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-clockwise me-2"></i>Upload Another File
                            </a>
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger border-0 shadow-sm">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 2.5rem;"></i>
                            <div>
                                <h5 class="mb-1">Upload Error</h5>
                                <p class="mb-0">@Model.Message</p>
                            </div>
                        </div>
                    </div>
                }

                <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm">
                    <div class="mb-4">
                        <label asp-for="CsvFile" class="form-label">
                            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Select CSV File
                        </label>
                        <input asp-for="CsvFile" class="form-control form-control-lg" type="file" accept=".csv"
                               onchange="handleFileSelect(this)" />
                        <span asp-validation-for="CsvFile" class="text-danger"></span>
                        <div class="form-text mt-2">
                            <i class="bi bi-info-circle me-1"></i>
                            Maximum file size: 50MB. Only CSV files are accepted.
                        </div>
                    </div>

                    <div id="fileInfo" class="alert alert-info border-0 shadow-sm d-none">
                        <h6 class="mb-2"><i class="bi bi-file-text me-2"></i>Selected File:</h6>
                        <p class="mb-1"><strong>Name:</strong> <span id="fileName"></span></p>
                        <p class="mb-0"><strong>Size:</strong> <span id="fileSize"></span></p>
                    </div>

                    <div class="alert alert-light border shadow-sm">
                        <h5 class="mb-3">
                            <i class="bi bi-table me-2 text-primary"></i>Expected CSV Format
                        </h5>

                        <h6 class="text-success mb-2">
                            <i class="bi bi-check-circle me-1"></i>Required Columns:
                        </h6>
                        <ul class="mb-3">
                            <li><code>pickup_datetime</code> or <code>tpep_pickup_datetime</code> - Date and time of pickup</li>
                            <li><code>dropoff_datetime</code> or <code>tpep_dropoff_datetime</code> - Date and time of dropoff</li>
                            <li><code>passenger_count</code> - Number of passengers (0-9)</li>
                            <li><code>trip_distance</code> - Trip distance in miles</li>
                            <li><code>fare_amount</code> - Base fare amount</li>
                            <li><code>total_amount</code> - Total amount charged</li>
                        </ul>

                        <h6 class="text-info mb-2">
                            <i class="bi bi-plus-circle me-1"></i>Optional Columns:
                        </h6>
                        <ul class="mb-0">
                            <li><code>pickup_location</code> or <code>PULocationID</code> - Pickup location</li>
                            <li><code>dropoff_location</code> or <code>DOLocationID</code> - Dropoff location</li>
                            <li><code>tip_amount</code> - Tip amount</li>
                            <li><code>tolls_amount</code> - Tolls amount</li>
                            <li><code>payment_type</code> - Payment method (Credit Card, Cash, etc.)</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                            <i class="bi bi-upload me-2"></i>Upload and Import Data
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-4">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-lightbulb text-warning me-2"></i>Tips for Best Results</h5>
                <ul class="mb-0">
                    <li>Ensure your CSV file uses UTF-8 encoding</li>
                    <li>Date format should be: YYYY-MM-DD HH:MM:SS</li>
                    <li>Decimal numbers should use dot (.) not comma (,)</li>
                    <li>Column headers should be in the first row</li>
                    <li>Large files are processed in batches automatically</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function handleFileSelect(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                const fileInfo = document.getElementById('fileInfo');
                const fileName = document.getElementById('fileName');
                const fileSize = document.getElementById('fileSize');

                fileName.textContent = file.name;
                fileSize.textContent = formatFileSize(file.size);
                fileInfo.classList.remove('d-none');
            }
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Uploading...';
        });
    </script>
}