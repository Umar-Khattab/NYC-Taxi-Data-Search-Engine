@model NycTaxiSearch.Models.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Search Taxi Trips";
}

<div class="card border-0 shadow-lg">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">
            <i class="bi bi-search me-2"></i>Search Taxi Trips
        </h3>
    </div>
    <div class="card-body p-4">
        <p class="text-muted mb-4">
            <i class="bi bi-info-circle me-2"></i>
            Use the filters below to search through taxi trip data. Leave fields empty to search all records.
        </p>

        <form asp-action="Search" method="post" id="searchForm">
            <!-- Date Range Section -->
            <div class="card mb-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-calendar-range text-primary me-2"></i>Date Range
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FromDate" class="form-label"></label>
                            <input asp-for="FromDate" class="form-control" type="date" />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ToDate" class="form-label"></label>
                            <input asp-for="ToDate" class="form-control" type="date" />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Passenger Count Section -->
            <div class="card mb-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-people-fill text-info me-2"></i>Passenger Count
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MinPassengerCount" class="form-label"></label>
                            <input asp-for="MinPassengerCount" class="form-control" type="number" min="0" max="9" 
                                   placeholder="Minimum passengers" />
                            <span asp-validation-for="MinPassengerCount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxPassengerCount" class="form-label"></label>
                            <input asp-for="MaxPassengerCount" class="form-control" type="number" min="0" max="9" 
                                   placeholder="Maximum passengers" />
                            <span asp-validation-for="MaxPassengerCount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trip Distance Section -->
            <div class="card mb-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-speedometer2 text-warning me-2"></i>Trip Distance (Miles)
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MinTripDistance" class="form-label"></label>
                            <input asp-for="MinTripDistance" class="form-control" type="number" step="0.1" 
                                   placeholder="Minimum distance" />
                            <span asp-validation-for="MinTripDistance" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxTripDistance" class="form-label"></label>
                            <input asp-for="MaxTripDistance" class="form-control" type="number" step="0.1" 
                                   placeholder="Maximum distance" />
                            <span asp-validation-for="MaxTripDistance" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fare Amount Section -->
            <div class="card mb-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-currency-dollar text-success me-2"></i>Fare Amount
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MinFareAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MinFareAmount" class="form-control" type="number" step="0.01" 
                                       placeholder="Min fare" />
                            </div>
                            <span asp-validation-for="MinFareAmount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxFareAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MaxFareAmount" class="form-control" type="number" step="0.01" 
                                       placeholder="Max fare" />
                            </div>
                            <span asp-validation-for="MaxFareAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location Section -->
            <div class="card mb-4 border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-geo-alt-fill text-danger me-2"></i>Location
                    </h5>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PickupLocation" class="form-label"></label>
                            <input asp-for="PickupLocation" class="form-control" type="text" 
                                   placeholder="Pickup location (Borough or Zone)" />
                            <span asp-validation-for="PickupLocation" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DropoffLocation" class="form-label"></label>
                            <input asp-for="DropoffLocation" class="form-control" type="text" 
                                   placeholder="Dropoff location (Borough or Zone)" />
                            <span asp-validation-for="DropoffLocation" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-search me-2"></i>Search Trips
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
